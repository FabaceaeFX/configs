! ----------------------------
! XTerm â€“ neutral grey palette
! ----------------------------

! Terminal identity
XTerm*termName: xterm-256color

! Font
XTerm*faceName: JetBrainsMono Nerd Font Mono
XTerm*faceSize: 20
XTerm*renderFont: true
XTerm*utf8: 2
XTerm*locale: true
XTerm*utf8Title: true

! Font scaling shortcuts
XTerm*VT100.translations: #override \
  Ctrl <Key> minus: smaller-vt-font() \n\
  Ctrl <Key> plus:  larger-vt-font()

! ----------------------------
! Colors (neutral, no blue tint)
! ----------------------------

XTerm*foreground:  #c8c8c8
XTerm*background:  #202020
XTerm*cursorColor: #c8c8c8

! Normal ANSI
XTerm*color0:  #202020
XTerm*color1:  #b06060
XTerm*color2:  #7a9a6a
XTerm*color3:  #c0a070
XTerm*color4:  #7a8fa8
XTerm*color5:  #9a7a9a
XTerm*color6:  #6f9a9a
XTerm*color7:  #c8c8c8

! Bright ANSI
XTerm*color8:  #505050
XTerm*color9:  #d08080
XTerm*color10: #9fbf8f
XTerm*color11: #d8b890
XTerm*color12: #9fbad8
XTerm*color13: #b89fb8
XTerm*color14: #8fbfbf
XTerm*color15: #f0f0f0

! ----------------------------
! Important comfort settings
! ----------------------------

! Do NOT turn bold into bright colors
XTerm*boldColors: false
XTerm*colorBDMode: false

! ----------------------------
! Scrollback & clipboard
! ----------------------------

XTerm*scrollBar: false
XTerm*saveLines: 10000

! Enable Shift+Ctrl+C / Shift+Ctrl+V in xterm
XTerm*VT100.Translations: #override \
    Shift Ctrl <Key>C: copy-selection(CLIPBOARD) \n\
    Shift Ctrl <Key>V: insert-selection(CLIPBOARD)


